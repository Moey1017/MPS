{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "sourceMap": false, // https://code.visualstudio.com/docs/typescript/typescript-compiling prevent auto generating map 
    "declarationMap": false,
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": false
  },
  "include": [
    "src"
  ]
}
